    <form action="#" method="post">
      <fieldset>
        <div class="row">
          <div class="one whole half-padded">
            <label for="name" class='pull-left one fourth mobile'>用户名</label>
            <input id="name" class='three fourths mobile' name='user[name]' type="text" placeholder="Enter your name " value="<%= @user.name %>" >
          </div>
          <div class="one whole half-padded">
            <label for="name" class='pull-left one fourth mobile'>密码</label>
            <input id="name" class='three fourths mobile'  name='user[password]' type="text" placeholder="Enter your name " value="<%= @user['password'] %>" >
          </div>
          <div class="one whole half-padded">
            <label for="email" class='pull-left one fourth mobile'>Email</label>
            <input id="email" class='three fourths mobile' type="user[email]" placeholder="you@example.com",value="<%= @user.email%>" disabled='disabled' >
          </div>
        </div>
        <div class="row">
          <div class="one whole half-padded">
            <label for="address"  class='pull-left one fourth mobile'>Mobile</label>
            <input id="address"   class='three fourths mobile' name="userr[mobile]" type="text" placeholder="Enter your mobile" value="<%= @user.mobile%>" disabled='disabled'>
          </div>
        </div>
        <div class="row">
          <div class="one whole half-padded">
              <label for="type_of_position" class='pull-left one fourth mobile'>工作类型</label>
              <span class="select-wrap three fourths mobile">
                <select class="unselected " id='type_of_position' name='user[type_of_position]'>
                  <% User::POSITION_ARRAY.each do |position| %>
                    <option value="<%= position %>" <% if @user.try(:type_of_position) == position %>selected='selected'<% end%> ><%= position %></option>
                  <% end %>
                </select>
              </span>
          </div>
        </div>
        <div class="row">
          <div class="one whole half-padded">
              <label for="company_id" class='pull-left one fourth mobile'>所属单位</label>
              <span class="select-wrap three fourths mobile">
                <select class="unselected" id='company_id' name='user[company_id]'>
                  <% Company.all.each do |company| %>
                    <option value="<%= company.id.to_s%>" <% if @user.try(:company_id).to_s == company.id.to_s %>selected='selected' <% end %> ><%=company.name%></option>
                  <% end %>
                </select>
              </span>
          </div>
        </div>

        <div class="row">
          <div class="one whole half-padded">
              <label for="city" class='pull-left one fourth mobile'>最近城市</label>
              <span class="select-wrap three fourths mobile">
                <select class="unselected" id='city' name='user[city]'>
                  <% User::CITY_ARRAY.each do |city| %>
                    <option value="<%= city %>" <% if @user.try(:city) == city %> selected='selected'<% end %> ><%= city %></option>
                  <% end %>
                </select>
              </span>
          </div>
        </div>
        <div class="row">
          <div class="one whole padded">
            <label for="ax" class='pull-left two thirds mobile'>是否对AX培训感兴趣</label>
            <ul class="unstyled one third mobile">
              <li class='half-gap-right half-gap-left pull-left'>
                <input id="ax_1" type="radio" name="user[ax]"  value='1' <% if @user.ax %> checked='checked'<%end%> >
                <label for="ax_1" class="inline">是</label>
              </li>
              <li class='pull-left'>
                <input id="ax_2" type="radio" name="user[ax]" value='0' <% unless @user.ax %> checked='checked'<%end%>>
                <label for="ax_2" class="inline" value=false>否</label>
              </li>
            </ul>
          </div>
          <div class="one whole half-padded">
            <label for="ax" class='pull-left two thirds mobile'>是否对CRM培训感兴趣</label>
            <ul class="unstyled one third mobile">
              <li class='half-gap-right half-gap-left pull-left'>
                <input id="crm_1" type="radio" name="user[crm]"  value='1' <% if @user.crm %> checked='checked'<%end%>>
                <label for="crm_1" class="inline">是</label>
              </li>
              <li class='pull-left'>
                <input id="crm_2" type="radio" name="user[crm]" value='0' <% unless @user.crm %> checked='checked'<%end%>>
                <label for="crm_2" class="inline">否</label>
              </li>
            </ul>
          </div>
          <div class="one whole half-padded">
            <label for="ax" class='pull-left two thirds mobile'>是否对软技能培训感兴趣</label>
            <ul class="unstyled one third mobile">
              <li class='half-gap-right half-gap-left pull-left'>
                <input id="softskill_1" type="radio" name="user[softskill]" value='1' <% if @user.softskill %> checked='checked'<%end%>>
                <label for="softskill_1" class="inline">是</label>
              </li>
              <li class='pull-left'>
                <input id="softskill_2" type="radio" name="user[softskill]" value='0' <% unless @user.softskill %> checked='checked'<%end%> >
                <label for="softskill_2" class="inline">否</label>
              </li>
            </ul>
          </div>
        </div>
        <div class="row">
          <div class="one whole half-padded">
              <label for="company_id" class='pull-left one fourth mobile'>QQ</label>
              <input id="qq" class='three fourths mobile' type="text" name='user[qq]' placeholder="user qq" value="<%= default(@user,'qq') %>">
          </div>
          <div class="one whole half-padded">
              <label for="wechart" class='pull-left one fourth mobile'>微信号</label>
              <input id="wechart" class='three fourths mobile' type="text" name='user[wechart]' placeholder="user wechart" value="<%= default(@user,'wechart') %>">
          </div>
          <div class="one whole half-padded">
              <label for="skype" class='pull-left one fourth mobile'>Skype</label>
              <input id="skype" class='three fourths mobile' type="text" name='user[skype]' placeholder="user skype" value="<%= default(@user,'skype') %>">
          </div>
        </div>
        <div class="row">
          <button class="block info one whole info-sub">提交</button>
        </div>
      </fieldset>
    </form>
