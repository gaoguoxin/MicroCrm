
<% content_for :app_head do %>
  <%= stylesheet_link_tag    "pages/manager/orders-bundle" %>
  <%= javascript_include_tag "pages/manager/orders-bundle" %>
  <script type="text/javascript">
  jQuery(function($) {

  });
  </script>
  <%= yield :head %>
<% end %>


<% content_for :left_side do %>
  <%= render :partial => 'manager/partical/left_side' %>
<% end %>

<% content_for :right_side do %>
  <div class="row right-head triple-pad-left triple-pad-right">
    <span class="fa fa-flag-o"></span>
    <span class="locate">课程管理<i class="fa fa-angle-double-right"></i><%=manager_order_status(params[:t])%></span>
  </div>
  <div class="row right-notice triple-pad-left triple-pad-right">
    <div class="notice-content double-gap-top double-gap-bottom double-pad-left pad-top pad-bottom">
      <i class="fa fa-info"></i>
      <span><%=manager_order_status(params[:t],true)%></span>
    </div>
  </div>
  <div class="row triple-pad-left triple-pad-right">
    <% if params[:t] == 'o'%>
      <div class="search-container">
        <form class='info search-course'>
            <div class="row">
              <div class="one third padded">
                <input id="search_code" name='code' type="text" placeholder="课程代码">
              </div>
              <div class="one third padded">
                <input id="search_name" name='name'  type="text" placeholder="课程名称">
              </div>
              <div class="one third padded">
                <input id="search_start" name='start' type="text" placeholder="开始时间">
              </div>                                            
            </div>
            <div class="row">
              <div class="one third padded">
                <span class="select-wrap">
                  <select class="unselected" name="content" id='search_position'>
                    <option value="" disabled="" selected="">内容类型</option>
                    <% Course::CONTENT_TYPE_ARRAY.each do |content| %>
                      <option value="<%= content %>" <% if params[:content] == content %>selected='selected' <% end %> ><%= content %></option>
                    <% end %>
                  </select>
                </span>                 
              </div>  
  
              <div class="one third padded">
                <span class="select-wrap">
                  <select class="unselected" name="city" id="search_city">
                    <option value="" disabled="" selected="">城市</option>
                    <% Course::CITY_ARRAY.each do |city| %>
                      <option value="<%= city %>" <% if params[:city] == city %> selected='selected'<% end %> ><%= city %></option>
                    <% end %>
                  </select>
                </span>
              </div>
  
              <div class="one third padded">
                <input id="search_end" name='end' type="text" placeholder="结束时间">
              </div>  
            </div>
            <div class="row">
              <div class="one whole padded">
                <button class="block info search_course">搜索</button>
              </div>
            </div>
        </form>
      </div>    
    <% end %>


    <table class=" main-container responsive responsiveTable  <%= @courses['data'].length > 0 ? 'info' : 'error' %>" data-max="15">
      <thead>
        <tr>
          <th>编码</th>
          <th>名称</th>
          <th>开始时间</th>
          <th>结束时间</th>
          <th>城市</th>
          <th>内容类型</th>
          <th>教师姓名</th>
          <th class='align-center'>
            <% if params[:t] == 'o'%>
              <button class='start small yellow'>报名</button> 
              <ul class="checklist turquoise">
                <li ></li>
              </ul> 
            <% else %>
              操作     
            <% end %>
          </th>
        </tr>
      </thead>
      <tbody>
        <%= render :partial => '/manager/orders/table',:locals => {:courses => @courses}%>
      </tbody>
    </table> 
      <% if params[:t] == 'o'%>
        <div class="page-container">
          <%= manager_paginator_ajax('order',@courses,{:name => params[:name],:code => params[:code],:content => params[:content],:city => params[:city],:start => params[:start],:end => params[:end]}) %>
        </div>
      <% end %>      
  </div> 


<article class="employee-box row"> 
  <div class="one whole padded">
    <h4 class='box info align-center'>勾选要报名的员工,已勾选的标示该员工已经报名,取消勾选来取消该员工的报名<span class="error">(注:开课前三天不允许取消报名)</span></h4> 
    <div class="content">    
    </div>     
    <div class="row double-pad-top double-pad-bottom">
      <button class="info block multiple_start_button">确定</button>
    </div>  
  </div>
</article>

<article class="order-list row"> 
  <div class="one whole padded">
    <div class="content">  
      <table >
        <thead>
          <tr>
            <th style="width: 55%;">课程名称</th>
            <th style="width: 15%;">报名人</th>
            <th style="width: 15%;">是否缺席</th>
            <th style="width: 15%;">操作</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>     
    <div class="row double-pad-top double-pad-bottom">
      <button class="info block close-box">关闭</button>
    </div>  
  </div>
</article>


<% end %>



