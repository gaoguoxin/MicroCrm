<div class="row">
  <div class="one third padded">
    <label for="type">公司名称</label>
    <span class="select-wrap">
      <select class="unselected" id='company_id' name='card[company_id]'>
      <% @companis.each do |company| %>
        <option value="<%= company.id.to_s%>" <% if card.try(:company_id) == company.id.to_s %>selected='selected' <% end %> ><%=company.name%></option>
      <% end %>
      </select>
    </span>
  </div>  
  <div class="one third padded">
    <label for="serial_number">学习卡编号(不可重复)</label>
    <input type='hidden' name='id' value="<%= card.try(:id).to_s %>" >
    <input id="serial_number" type="text" name='card[serial_number]' placeholder="card serial number" value="<%= default(card,'serial_number') %>">
  </div>
  <div class="one third padded">
    <label for="type">类型</label>
    <span class="select-wrap">
      <select class="unselected" id='type' name='card[type]'>
        <% Card::TYPE_HASH.each_pair do |k,v| %>
          <option value="<%= k %>" <% if card.try(:type) == k %>selected='selected' <% end %> ><%= v %></option>
        <% end %>
      </select>
    </span>
  </div>
</div>

<div class="row">
  <div class="one half padded">
      <label for="status_payment">付款状态</label>
      <span class="select-wrap">
        <select class="unselected" id='status_payment' name='card[status_payment]'>
          <% Card::PAY_STATUS_HASH.each_pair do |k,v| %>
            <option value="<%= k %>" <% if card.try(:status_payment) == k %>selected='selected' <% end %> ><%= v %></option>
          <% end %>
        </select>
      </span>
  </div>
  <div class="one half padded">
      <label for="status_execution">执行状态</label>
      <span class="select-wrap">
        <select class="unselected" id='status_execution' name='card[status_execution]'>
          <% Card::EXEC_STATUS_HASH.each_pair do |k,v| %>
            <option value="<%= k %>" <% if card.try(:status_execution) == k %> selected='selected'<% end %> ><%= v %></option>
          <% end %>
        </select>
      </span>
  </div>            
</div>

<div class="row">
  <div class="one half padded">
    <label for="quantity_purchased">购买的人天数</label>
    <input id="quantity_purchased" name='card[quantity_purchased]' type="number" placeholder="Enter a number..." value="<%= default(card,'quantity_purchased') %>">
  </div>
  <div class="one half padded">  
    <label for="quantity_used">已使用人天数</label>
    <input id="quantity_used"  name='card[quantity_used]' type="number" placeholder="Enter a number..." value="<%= default(card,'quantity_used') %>">
  </div>            
</div>
<div class="row">
  <div class="one half padded">
      <label for="amount_payable">应付金额(人民币)</label>  
      <input id="amount_payable" name='card[amount_payable]' type="number" step="0.01"  placeholder="Enter a number..." value="<%= default(card,'amount_payable') %>">
  </div>
  <div class="one half padded">
      <label for="amount_paid">实付金额人民币</label>
      <input id="amount_paid" name='card[amount_paid]' type="number" step="0.01"  placeholder="Enter a number..." value="<%= default(card,'amount_paid') %>">
  </div>            
</div>
<div class="row">
  <div class="one half padded">
    <label for="date_paid">付款日期</label>
    <input id="date_paid" name='card[date_paid]' type="text" placeholder="select a date..." value="<%= default(card,'date_paid') %>">
  </div>
  <div class="one half padded">
      <label for="finished_at">执行完毕日期</label>
      <input id="finished_at" name='card[finished_at]' type="text" placeholder="select a date..." value="<%= default(card,'finished_at') %>">
  </div> 
</div> 

<div class="row">
  <div class="one half padded">
      <label for="buyer_voucher">买方付款凭证号</label>
      <input id="buyer_voucher" name='card[buyer_voucher]' type="text" placeholder="Enter something..." value="<%= default(card,'buyer_voucher') %>">
  </div>
  <div class="one half padded">
      <label for="receipt_num">发票号</label>
      <input id="receipt_num" name='card[receipt_num]' type="number" placeholder="Enter something..." value="<%= default(card,'receipt_num') %>">
  </div>  
</div>
<div class="row">
  <div class="one half padded">
    <label for="buyer">买方联系人</label>
    <input id="buyer" name='card[buyer]' type="text" placeholder="Enter something..." value="<%= default(card,'buyer') %>">
  </div>
  <div class="one half padded">
      <label for="buyer_mobile">买方联系人电话</label>
      <input id="buyer_mobile" name='card[buyer_mobile]' type="text" placeholder="mobile number" value="<%= default(card,'buyer_mobile') %>">
  </div>  
</div>

<div class="row">
  <div class="one whole padded">
    <label for="post_address">发票邮寄地址</label>
    <input id="post_address" name='card[post_address]' type="text" placeholder="post address" value="<%= default(card,'post_address') %>">
    
  </div>
</div>
