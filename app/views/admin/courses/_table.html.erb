<% if params[:status].to_i == Course::STATUS_CODE_0%>
<!-- 规划中-->
  <% if cousrses['data'].length > 0 %>
    <% cousrses['data'].each do |course|%>
      <tr>
        <td><%= course.code %></td>
        <td>中文:<%= course.name_cn%><br />英文:<%= course.name_en%></td>
        <td><%= course.start_date.strftime('%Y/%m/%d') %><br/><%= course.start_time %></td>
        <td><%= course.end_date.strftime('%Y/%m/%d') %><br/><%= course.end_time %></td>
        <td><%= course.city %></td>
        <td><%= course.content_type%></td>
        <td class='align-center'><%= image_tag(course.instructor_avatar.thumb.url) if course.instructor_avatar.thumb.url.present? %><br/><%=course.instructor %></td>
        <td>
          <a href="<%=admin_course_path(course)%>" class='edit-course' id="<%= course.id.to_s %>">查看/修改</a>
          <% if current_user.is_admin? %>
            <a data-method="delete" class="delete-course" href="<%=admin_course_path(course)%>">删除</a>
          <% end %>
        </td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="8" class='no-data'>目前没有查到任何处于发布中的课程</td>  
    </tr>  
  <% end %>
<%elsif params[:status].to_i == Course::STATUS_CODE_1%>
<!-- 已发布-->
  <% if cousrses['data'].length > 0 %>
    <% cousrses['data'].each do |course|%>
      <tr>
        <td><%= course.code %></td>
        <td>中文:<%= course.name_cn%><br />英文:<%= course.name_en%></td>
        <td><%= course.start_date.strftime('%Y/%m/%d') %><br/><%= course.start_time %></td>
        <td><%= course.end_date.strftime('%Y/%m/%d') %><br/><%= course.end_time %></td>
        <td><%= course.city %></td>
        <td><%= course.content_type%></td>
        <td class='align-center'><%= image_tag(course.instructor_avatar.thumb.url) if course.instructor_avatar.thumb.url.present? %><br/><%=course.instructor %></td>
        <td>
          <a href="<%=admin_course_path(course)%>" class='edit-course' id="<%= course.id.to_s %>">查看/修改</a>
          <% if current_user.is_admin? %>
            <a data-method="delete" class="delete-course" href="<%=admin_course_path(course)%>">删除</a>
          <% end %>
        </td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="8" class='no-data'>目前没有查到任何处于发布中的课程</td>  
    </tr>  
  <% end %>
<%elsif params[:status].to_i == Course::STATUS_CODE_2%>
<!-- 授课中-->
<%elsif params[:status].to_i == Course::STATUS_CODE_3%>
<!-- 已交付-->
<%else%>
<!-- 已取消-->
<% end %>